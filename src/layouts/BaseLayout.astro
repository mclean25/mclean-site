---
const {title} = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex h-screen">
      <!-- Navbar -->
      <div class="w-60 p-4 fixed h-screen">
        <div class="flex flex-col h-full justify-between">
          <div class="flex flex-col gap-2">
            <h1 class="font-oswald lowercase text-2xl">Alex McLean</h1>
            <div class="flex text-sm flex-col gap-0 underline text-gray-700 lowercase">
              <a href="/about">About</a>
              <a href="/posts">Posts</a>
              <a href="/projects">Projects</a>
              <a href="/contact">Contact</a>
            </div>
          </div>
          
          <div class="flex text-sm flex-col gap-0 underline text-gray-700">
            <a href="/">github</a>
            <a href="/">x</a>
            <a href="/">email</a>
            <a href="/">linkedin</a>
          </div>
        </div>
      </div>
      <!-- Content area with margin-left to account for fixed navbar -->
      <div class="ml-60 flex-1 p-4 pr-12 max-w-3xl">
          <h2 class="text-3xl font-bold mb-1 font-oswald">{title}</h2>
          <div class="mt-18 pb-12">
            <slot />
          </div>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

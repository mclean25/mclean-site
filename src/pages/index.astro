---
import Layout from '../layouts/Layout.astro';

import "../styles/global.css";
---

<Layout>
	<div class="flex flex-col min-h-screen relative overflow-hidden">
		<!-- Animated dot grid background -->
		<div class="wave-grid absolute inset-0 z-0"></div>
		
		<!-- Content -->
		<div class="relative z-10 p-4 flex-grow">
			<div class="text-4xl font-bold">Hello</div>
		</div>
	</div>

	<style>
		html, body {
			height: 100%;
			margin: 0;
			padding: 0;
		}
		
		.wave-grid {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100vh;
			background-color: white;
		}

		/* Create the dot grid using a background pattern */
		.wave-grid::before {
			content: "";
			position: absolute;
			top: -100px;
			left: -100px;
			right: -100px;
			bottom: -100px;
			background-image: radial-gradient(circle, #9ca3af 1px, transparent 1px);
			background-size: 24px 24px;
			animation: wave1 15s ease-in-out infinite;
		}

		/* Add a second layer of dots with different animation timing */
		.wave-grid::after {
			content: "";
			position: absolute;
			top: -100px;
			left: -100px;
			right: -100px;
			bottom: -100px;
			background-image: radial-gradient(circle, #9ca3af 0.8px, transparent 0.8px);
			background-size: 24px 24px;
			animation: wave2 12s ease-in-out infinite;
			animation-delay: -4s; /* Offset timing for more natural wave effect */
			opacity: 0.7;
		}

		/* First wave animation */
		@keyframes wave1 {
			0% {
				transform: translateX(0px) translateY(0px) skew(0deg, 0deg);
			}
			20% {
				transform: translateX(-8px) translateY(6px) skew(1deg, 0.5deg);
			}
			40% {
				transform: translateX(6px) translateY(2px) skew(-0.5deg, 0deg);
			}
			60% {
				transform: translateX(-4px) translateY(-6px) skew(0.5deg, -0.5deg);
			}
			80% {
				transform: translateX(8px) translateY(-3px) skew(-1deg, 0.25deg);
			}
			100% {
				transform: translateX(0px) translateY(0px) skew(0deg, 0deg);
			}
		}

		/* Second wave animation with different movement pattern */
		@keyframes wave2 {
			0% {
				transform: translateX(0px) translateY(0px) skew(0deg, 0deg);
			}
			25% {
				transform: translateX(8px) translateY(-4px) skew(-0.5deg, 0.25deg);
			}
			50% {
				transform: translateX(-6px) translateY(8px) skew(0.5deg, -0.5deg);
			}
			75% {
				transform: translateX(3px) translateY(-2px) skew(-0.25deg, 0deg);
			}
			100% {
				transform: translateX(0px) translateY(0px) skew(0deg, 0deg);
			}
		}
	</style>
</Layout>